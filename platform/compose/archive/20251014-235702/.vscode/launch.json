{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach: Next.js storefront in container",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "restart": false,
      "address": "localhost",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach: Python uvicorn (APIs)",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "justMyCode": true
    }
  ]
}
