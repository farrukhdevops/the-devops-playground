{
  "title": "Node â€” Essentials",
  "uid": "node-essentials",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    { "type":"timeseries","title":"CPU usage by mode",
      "gridPos":{"x":0,"y":0,"w":12,"h":6},
      "targets":[ { "expr":"sum by (mode) (rate(node_cpu_seconds_total{mode!=\"idle\"}[2m]))", "legendFormat":"{{mode}}" } ] },
    { "type":"timeseries","title":"Load average (1m/5m/15m)",
      "gridPos":{"x":12,"y":0,"w":12,"h":6},
      "targets":[
        { "expr":"node_load1", "legendFormat":"load1" },
        { "expr":"node_load5", "legendFormat":"load5" },
        { "expr":"node_load15", "legendFormat":"load15" }
      ] },
    { "type":"timeseries","title":"Memory used",
      "gridPos":{"x":0,"y":6,"w":12,"h":6},
      "targets":[ { "expr":"node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes", "legendFormat":"used" } ] },
    { "type":"timeseries","title":"Filesystem used (top mounts)",
      "gridPos":{"x":12,"y":6,"w":12,"h":6},
      "targets":[ { "expr":"(node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"} - node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\"})",
                    "legendFormat":"{{mountpoint}}" } ] },
    { "type":"timeseries","title":"Network rx/tx (bytes/s)",
      "gridPos":{"x":0,"y":12,"w":24,"h":6},
      "targets":[
        { "expr":"sum by (device) (rate(node_network_receive_bytes_total[2m]))", "legendFormat":"{{device}} rx" },
        { "expr":"sum by (device) (rate(node_network_transmit_bytes_total[2m]))", "legendFormat":"{{device}} tx" }
      ] }
  ]
}
